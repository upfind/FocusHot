<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
    >

    <ImageView
        android:id="@+id/ivAuthorImg"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivAuthorImg"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/ivAuthorImg"
        android:layout_toRightOf="@+id/ivAuthorImg"
        android:fontFamily="sans-serif-condensed"
        android:text="upfinder"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/tvQiuBaiContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAuthorImg"
        android:layout_marginTop="8dp"
        android:text="今天。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。明天。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。后天。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/tvLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvQiuBaiContent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_favorite_red_400_18dp"
        android:drawablePadding="@dimen/dp_4"
        android:text="2049"
        />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="36dp"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvQiuBaiContent"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="6dp"
        android:padding="@dimen/dp_4"
        app:srcCompat="@drawable/ic_share_blue_600_24dp"/>

</RelativeLayout>